<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Property report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_property"/>
        <field  name="binding_type">report</field>
        <field name="report_name">app_one.property_report_template</field>

    </record>

    <template id="property_report_template">
        <t t-call="web.html_container">
            <!-- web.basic_layout -->
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <h1>Property report</h1>

                    <style>

                        table { width: 100%;
                        border-collapse: collapse;
                        font-family: Arial, sans-serif; }

                        thead th {
                        background-color: #f2f2f2;
                        font-size: 1.2em;
                        text-align: left;
                        padding: 8px;
                        border: 1px solid #dddddd;
                        }

                        tbody td {
                        padding: 8px;
                        border: 1px solid #dddddd; }

                        tbody td:first-child {
                        font-weight: bold; }

                        tbody tr:nth-child(even) {
                        background-color: #f9f9f9;
                        }

                    </style>
                    <table>
                        <thead>
                            <th colspan="4">General Information</th>
                        </thead>
                        <tbody>
                            <td>Name</td>
                            <td><t t-esc="o.name"></t></td>
                            <td>Postcode</td>
                            <td><t t-esc="o.postcode"></t></td>
                        </tbody>
                    </table>

                    <br></br>
                    <table>
                        <thead>
                            <th colspan="4">Personal Information</th>
                        </thead>
                        <tbody>
                            <td>Owner</td>
                            <td><t t-esc="o.owner_id.name"></t></td>
                            <td>Owner address</td>
                            <td><t t-esc="o.owner_address"></t></td>
                        </tbody>
                    </table>
                    <br></br>
                    <table>
                        <thead>
                            <th>Description</th>
                            <th>Area</th>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="rec">
                                <tr>
                                    <td t-esc="rec.description"></td>
                                    <td t-esc="rec.area"></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>