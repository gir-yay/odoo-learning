<odoo>

    <record id="property_view_list" model="ir.ui.view">
        <field name="name">property list</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="custom_header" decoration-danger="(sold_late)">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="garden_orientation"/>
                <field name="expected_price" optional="1"/>
                <field name="garden" optional="1"/>
                <field name="owner_id"/>
                <field name="owner_address"/>
                <field name="expected_selling_date" optional="1"/>
                <field name="sold_late" invisible="1"/>


            </tree>
        </field>

    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                   <div name="button_box" class="oe_button_box">
                       <button name="action_open_related_owner" type="object" icon="fa-user" string="Owner"  invisible="not owner_id"/>
                   </div>
                   <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active" />
                   <widget name="web_ribbon" title="Done" bg_color="text-bg-success" invisible="state != 'done'" />
                   <header>
                       <button name="action_draft" type="object" string="Set to draft" class="btn-primary" invisible="state in ('draft', 'closed') "/>
                       <button name="action_pending" type="object" string="Pending" class="btn-secondary" invisible="state != 'draft' "/>
                       <button name="action_done" type="object" string="Done" class="btn-success" invisible="state != 'pending' "/>


                       <!-- options="{'clickable':1}" -->
                       <field name="state" widget="statusbar" statusbar_visible="draft,pending,done,closed" />
                   </header>
                   <div class="oe_title">
                       <label for="ref"/>
                           <h1>
                               <field name="ref"/>
                           </h1>
                        <label for="name"/>
                           <h3>
                               <field name="name" readonly="state == 'closed' "/>
                           </h3>
                   </div>
                   <group>
                       <group string="General info">
                           <field name="postcode"/>
                           <field name="garden_orientation"/>
                           <field name="tag_ids" widget="many2many_tags"/>

                       </group>
                       <group string="Additional info">
                           <field name="active" invisible="1"/>
                           <field name="garden"/>
                           <field name="date_availability"/>
                       </group>

                        <group string="Selling Info info">
                           <field name="expected_price"/>
                           <field name="selling_price"/>
                           <field name="expected_selling_date"/>
                           <field name="diff"/>


                       </group>

                   </group>
                   <group string="Desc">
                       <field name="owner_id"/>
                       <field name="description" required="1"/>

                   </group>

                   <notebook>
                       <page string="Bedrooms">
                           <field name="line_ids">
                               <tree editable="bottom">
                                   <field name="description"/>
                                   <field name="area"/>
                               </tree>
                           </field>
                       </page>
                   </notebook>

               </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>

                </div>
            </form>
        </field>

    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="name"/>
                <filter name="is_garden" string="With garden" domain="[('garden', '=', 'True')]"/>
                <filter name="group_garden_by_orientation"
                        string="Group by garden orientation"
                        context="{'group_by' : 'garden_orientation'}"
                />
            </search>

        </field>
    </record>

    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name">close</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>

    <record id="property_sold_late_automated_action" model="ir.cron">
        <field name="name">Property: check selling date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="property_change_state_server_action" model="ir.actions.server">
        <field name="name">change state</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_state_wizard()
        </field>
    </record>

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property action</field>
        <field name="res_model">property</field>
    </record>

    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="property_action"
    />
</odoo>