<odoo>

    <record id="todo_task_view_list" model="ir.ui.view">
        <field name="name">tasks to do list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="(late_task)">
                <field name="task_name"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="status" optional="1"/>
                <field name="assign_to" optional="1"/>
                <field name="late_task" invisible="1"/>

            </tree>
        </field>
    </record>


    <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Task">
               <sheet>
                   <header>
                       <button name="action_new" type="object" string="New" class="btn-primary" invisible="status in ('new','closed')"/>
                       <button name="action_in_progress" type="object" string="In progress" class="btn-secondary" invisible="status != 'new'"/>
                       <button name="action_completed" type="object" string="Completed" class="btn-success" invisible="status != 'in_progress'"/>
                       <field name="status" widget="statusbar" statusbar_visible="new,in_progress,completed,closed"/>
                   </header>

                   <div class="oe_title">
                       <label for="task_name"/>
                           <h1>
                               <field name="task_name"/>
                           </h1>
                   </div>
                   <group>
                       <group string="General info">
                           <field name="description"/>
                           <field name="due_date"/>
                           <field name="assign_to"/>
                           <field name="estimated_time"/>
                           <field name="total_time_spent"/>
                       </group>
                   </group>
                   <notebook>
                       <page string="Timesheets">
                           <field name="line_ids">
                               <tree editable="bottom">
                                   <field name="description"/>
                                   <field name="time"/>
                               </tree>
                           </field>
                       </page>
                   </notebook>

               </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>

                </div>
            </form>
        </field>

    </record>

    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">task search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

                <filter name="new_tasks" string="New tasks" domain="[('status', '=', 'new')]"/>
                <filter name="tasks_in_progress" string="Tasks in progress" domain="[('status', '=', 'in_progress')]"/>
                <filter name="completed_tasks" string="Completed tasks" domain="[('status', '=', 'completed')]"/>

                <filter name="group_tasks_by_assign_to"
                        string="Group by assign to"
                        context="{'group_by' : 'assign_to'}"
                />
                <filter name="group_tasks_by_status"
                        string="Group by status"
                        context="{'group_by' : 'status'}"
                />
                <filter name="group_tasks_by_due_date"
                        string="Group by due date"
                        context="{'group_by' : 'due_date'}"
                />

            </search>

        </field>
    </record>



    <record id="task_action" model="ir.actions.act_window">
        <field name="name">task action</field>
        <field name="res_model">todo.task</field>
    </record>

    <record id="todo_task_closed_server_action" model="ir.actions.server">
        <field name="name">close</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>

    <record id="late_task_automated_action" model="ir.cron">
        <field name="name">Todo Tasks: check due date</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">model.check_due_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <menuitem
            id="tasks_menu_item"
            name="All tasks"
            parent="tasks_menu"
            action="task_action"
    />
</odoo>